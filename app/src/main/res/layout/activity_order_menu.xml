<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderMenu">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/OrderMenuLogo"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="Order Menu Logo"
                    android:src="@drawable/ic_main_menu_logo" />

                <ScrollView
                    android:id="@+id/TypesOfFoodScrollView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/OrderMenuLogo">

                    <HorizontalScrollView
                        android:id="@+id/TypesOfFoodHorizontalScrollView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"></HorizontalScrollView>
                </ScrollView>

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/TypesOfFoodScrollView"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp">

                    <TableRow>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/TypesOfFoodScrollView"
                            android:layout_marginEnd="23dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/food_layout_border"
                            android:padding="4dp">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/food_picture" />

                            <TextView
                                android:id="@+id/food_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageView2"
                                android:layout_margin="10dp"
                                android:text="Том Ям"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/food_mass"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/food_title"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="500 г"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="140dp"
                                android:layout_height="40dp"
                                android:layout_below="@id/food_mass"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/food_price_button"
                                android:clickable="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/food_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="20dp"
                                    android:layout_weight="0.5"
                                    android:text="720 р"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/food_old_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.5"
                                    android:text="@string/food_old_price"
                                    android:textSize="14sp" />

                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/food_layout_border"
                            android:padding="4dp">

                            <ImageView
                                android:id="@+id/imageView22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/food_picture" />

                            <TextView
                                android:id="@+id/food_title2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageView22"
                                android:layout_margin="10dp"
                                android:text="Том Ям"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/food_mass2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/food_title2"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="500 г"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="140dp"
                                android:layout_height="40dp"
                                android:layout_below="@id/food_mass2"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <Button
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:text="—" />

                                <Space
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1"></Space>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10" />

                                <Space
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1"></Space>

                                <Button
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:text="+" />
                            </LinearLayout>
                        </RelativeLayout>
                    </TableRow>

                    <TableRow>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/TypesOfFoodScrollView"
                            android:layout_marginEnd="23dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/food_layout_border"
                            android:padding="4dp">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/food_picture" />

                            <TextView
                                android:id="@+id/food_title3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageView3"
                                android:layout_margin="10dp"
                                android:text="Том Ям"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/food_mass3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/food_title3"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="500 г"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="140dp"
                                android:layout_height="40dp"
                                android:layout_below="@id/food_mass3"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/food_price_button"
                                android:clickable="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/food_price3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="20dp"
                                    android:layout_weight="0.5"
                                    android:text="720 р"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/food_old_price3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.5"
                                    android:text="@string/food_old_price"
                                    android:textSize="14sp" />

                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/TypesOfFoodScrollView"
                            android:background="@drawable/food_layout_border"
                            android:padding="4dp">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/food_picture" />

                            <TextView
                                android:id="@+id/food_title4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageView4"
                                android:layout_margin="10dp"
                                android:text="Том Ям"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/food_mass4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/food_title4"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="500 г"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="140dp"
                                android:layout_height="40dp"
                                android:layout_below="@id/food_mass4"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/food_price_button"
                                android:clickable="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/food_price4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="20dp"
                                    android:layout_weight="0.5"
                                    android:text="720 р"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/food_old_price4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.5"
                                    android:text="@string/food_old_price"
                                    android:textSize="14sp" />

                            </LinearLayout>
                        </RelativeLayout>
                    </TableRow>

                    <TableRow>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/TypesOfFoodScrollView"
                            android:layout_marginEnd="23dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/food_layout_border"
                            android:padding="4dp">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/food_picture" />

                            <TextView
                                android:id="@+id/food_title5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageView5"
                                android:layout_margin="10dp"
                                android:text="Том Ям"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/food_mass5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/food_title5"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="500 г"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="140dp"
                                android:layout_height="40dp"
                                android:layout_below="@id/food_mass5"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/food_price_button"
                                android:clickable="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/food_price5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="20dp"
                                    android:layout_weight="0.5"
                                    android:text="720 р"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/food_old_price5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.5"
                                    android:text="@string/food_old_price"
                                    android:textSize="14sp" />

                            </LinearLayout>
                        </RelativeLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>